<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/transaction_edit_pic1"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/edt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layout_below="@+id/transaction_edit_pic1"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/edt_money"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_title"
            android:layout_centerHorizontal="true"
            android:text="55,000 đ"
            android:textColor="#F60000" />
        <RelativeLayout
            android:id="@+id/edt_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_money"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/edt_date"/>
            <EditText
                android:id="@+id/edt_date"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Thứ 3, 2/2/2022"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edt_budget_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_date_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/edt_budget"/>

            <EditText
                android:id="@+id/edt_budget"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:text="Tiền mặt" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edt_value_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_budget_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/edt_value"/>

            <EditText
                android:id="@+id/edt_value"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:text="2,000,000 đ" />
        </RelativeLayout>
</RelativeLayout>