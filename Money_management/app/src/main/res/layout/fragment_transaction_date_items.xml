<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btn_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/transaction_pic"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_baseline_fastfood_24" />

            <TextView
                android:id="@+id/transaction_typeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10sp"
                android:text="Ăn uống"
                android:textAppearance="@style/user_infor" />
            <TextView
                android:id="@+id/transaction_Email_HD"
                android:text="EMAIL"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/transaction_Type_HD"
                android:text="Type"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/transaction_ID_HD"
                android:text="ID"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/transaction_Date_HD"
                android:text="DATE"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/transaction_amount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:text="55,000"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:textColor="#F60000"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/transaction_amountHD"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="55,000"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>