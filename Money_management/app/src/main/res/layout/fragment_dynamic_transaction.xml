<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TransactionDynamicFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/summary_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        tools:ignore="MissingConstraints">

                        <TableLayout
                            android:id="@+id/table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:stretchColumns="*">

                            <TableRow>

                                <TextView
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="15dp"
                                    android:padding="3dip"
                                    android:text="Tiền vào"
                                    android:textColor="#000000"
                                    android:textSize="17dp" />

                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="right"
                                    android:padding="3dip"
                                    android:text="8,050,000"
                                    android:textColor="#00B212"
                                    android:textSize="17dp" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="3dip"
                                    android:text="Tiền ra"
                                    android:textColor="#000000"
                                    android:textSize="17dp" />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="right"
                                    android:padding="3dip"
                                    android:text="7,500,000"
                                    android:textColor="#F60000"
                                    android:textSize="17dp" />
                            </TableRow>

                            <TableRow>

                                <View
                                    android:layout_marginTop="5dp"
                                    android:background="#FF909090" />

                                <View
                                    android:layout_height="2dip"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#FF909090" />
                            </TableRow>

                            <TableRow>

                                <TextView />

                                <TextView
                                    android:layout_marginEnd="10dp"
                                    android:gravity="right"
                                    android:padding="3dip"
                                    android:text="550,000"
                                    android:textColor="#000000"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />
                            </TableRow>
                        </TableLayout>
                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="90dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_report"
                        android:text="Báo cáo cho tháng này"
                        android:textColor="#00D916"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="@+id/summary_month"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:elevation="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/transaction_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center">

                            <RelativeLayout android:gravity="center">

                                <TextView
                                    android:id="@+id/transaction_id2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:padding="3dip"
                                    android:text="2"
                                    android:textColor="#000000"
                                    android:textSize="30sp" />

                                <TextView
                                    android:id="@+id/transaction_day2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dip"
                                    android:layout_toRightOf="@+id/transaction_id2"
                                    android:text="Thứ ba"
                                    android:textColor="#000000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/transaction_day2"
                                    android:layout_toRightOf="@+id/transaction_id2"
                                    android:text="tháng 2 2022"
                                    android:textColor="#747373" />
                            </RelativeLayout>

                            <TextView
                                android:gravity="right"
                                android:text="-190,000"
                                android:textColor="#000000" />
                        </TableRow>

                        <View
                            android:layout_height="2dip"
                            android:background="#CDCDCD" />

                        <TableRow
                            android:id="@+id/btn_choose"
                            android:layout_marginTop="10dp">

                            <RelativeLayout>

                                <ImageView
                                    android:id="@+id/transaction_pic1"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic1"
                                    android:text="Ăn uống" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="55,000"
                                android:textColor="#F60000" />
                        </TableRow>

                        <TableRow>

                            <RelativeLayout>

                                <ImageView
                                    android:id="@+id/transaction_pic2"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic2"
                                    android:text="Bảo dưỡng xe" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="115,000"
                                android:textColor="#F60000" />
                        </TableRow>

                        <TableRow
                            android:layout_marginBottom="10dp">

                            <RelativeLayout>


                                <ImageView
                                    android:id="@+id/transaction_pic3"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic3"
                                    android:text="Hẹn hò" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="20,000"
                                android:textColor="#F60000" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:elevation="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/transaction_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center">

                            <RelativeLayout android:gravity="center">

                                <TextView
                                    android:id="@+id/transaction_id1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:padding="3dip"
                                    android:text="1"
                                    android:textColor="#000000"
                                    android:textSize="30sp" />

                                <TextView
                                    android:id="@+id/transaction_day1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dip"
                                    android:layout_toRightOf="@+id/transaction_id1"
                                    android:text="Thứ hai"
                                    android:textColor="#000000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/transaction_day1"
                                    android:layout_toRightOf="@+id/transaction_id1"
                                    android:text="tháng 2 2022"
                                    android:textColor="#747373" />
                            </RelativeLayout>

                            <TextView
                                android:gravity="right"
                                android:text="+70,000"
                                android:textColor="#000000" />
                        </TableRow>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dip"
                            android:background="#CDCDCD" />

                        <TableRow
                            android:layout_marginTop="10dp">

                            <RelativeLayout>

                                <ImageView
                                    android:id="@+id/transaction_pic4"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic4"
                                    android:text="Xem phim" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="55,000"
                                android:textColor="#F60000" />
                        </TableRow>

                        <TableRow>

                            <RelativeLayout>

                                <ImageView
                                    android:id="@+id/transaction_pic5"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic5"
                                    android:text="Ăn uống" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="50,000"
                                android:textColor="#F60000" />
                        </TableRow>

                        <TableRow>

                            <RelativeLayout>

                                <ImageView
                                    android:id="@+id/transaction_pic6"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic6"
                                    android:text="A trả nợ" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="75,000"
                                android:textColor="#00B212" />
                        </TableRow>

                        <TableRow android:layout_marginBottom="10dp">

                            <RelativeLayout>

                                <ImageView
                                    android:id="@+id/transaction_pic7"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_toRightOf="@+id/transaction_pic7"
                                    android:text="Hốt hụi" />
                            </RelativeLayout>

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_marginTop="10sp"
                                android:gravity="right"
                                android:text="100,000"
                                android:textColor="#00B212" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
</ScrollView>